<p id="notice"><%= notice %></p>

<h1><%= Task.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th><%= Task.human_attribute_name(:title) %></th>
      <th><%= Task.human_attribute_name(:description) %></th>
      <th><%= tasks_sort_link(:deadline) %></th>
      <th><%= tasks_sort_link(:priority) %></th>
      <th><%= Task.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to t('label.show'), task %></td>
        <td><%= link_to t('label.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('label.destroy'), task, method: :delete, data: { confirm: t('message.destroy_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('label.new'), new_task_path %>
