<div class="container">
  <h1><%= Task.model_name.human %></h1>
  <%= render 'search', q: @q  %>
  <table class="table">
    <thead>
      <tr>
        <th><%= Task.human_attribute_name(:title) %></th>
        <th><%= Task.human_attribute_name(:description) %></th>
        <th><%= tasks_sort_link(:deadline) %></th>
        <th><%= tasks_sort_link(:priority) %></th>
        <th><%= Task.human_attribute_name(:status) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.description %></td>
          <td><%= task.deadline.strftime("%Y-%m-%d  %H:%M") %></td>
          <td><%= task.priority %></td>
          <td><%= task.status %></td>
          <td class=pull-right >
            <%= link_to t('label.show'), task, class: 'btn btn-outline-primary' %>
            <%= link_to t('label.edit'), edit_task_path(task), class: 'btn btn-outline-primary' %>
            <%= link_to t('label.destroy'), task, method: :delete, data: { confirm: t('message.destroy_confirm') }, class: 'btn btn-outline-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to t('label.new'), new_task_path, class: 'btn btn-outline-primary btn-block' %>
</div>