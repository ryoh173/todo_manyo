<div class="container">
  <div class="card">
    <div class="card-body">
        
      <p class='card-header h2'>
        <%= @task.title %>
      </p>
        <br>
      <p class='card-text'>
        <%= @task.description %>
      </p>

      <p>
        <%= Task.human_attribute_name(:deadline) %>
        <%= @task.deadline.strftime("%Y-%m-%d  %H:%M") %>
      </p>

      <p>
        <%= Task.human_attribute_name(:priority) %>
        <%= @task.priority %>
      </p>

      <p>
        <%= Task.human_attribute_name(:status) %>
        <%= @task.status %>
      </p>
    </div>
  </div>
  <br>  

  <%= link_to t('label.edit'), edit_task_path(@task), class: 'btn btn-outline-primary' %>
  <%= link_to t('label.back'), tasks_path, class: 'btn btn-outline-danger' %>
</div>
